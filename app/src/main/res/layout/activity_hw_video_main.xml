<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5f5f5f"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <FrameLayout
            android:id="@+id/fyt_local"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <ImageView
                android:id="@+id/img_hw_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/webview_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="风险提示录音录像"
                android:textColor="#FFFFFF" />

        </RelativeLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/tv_conn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="录音录像信息提示"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tv_hw_video_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="确认客户信息:\n1.刘梦余先生（女士），您的出生日期是什么时候？\n2.您的证件号码后四位是什么？\n3.您在我行电子渠道预留的手机号是什么？"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </ScrollView>

</LinearLayout>
